<Window x:Class="TestBenchApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dg="http://schemas.microsoft.com/wpf/2008/toolkit"
        Title="MainWindow" 
        WindowState="Maximized" WindowStyle="SingleBorderWindow">
    <Grid>
        <TabControl>
            <TabItem Header="Shift Data" Name="tabProductionData" FontSize="15" Background="Green" Visibility="Visible" >
                <Grid  Background="Green">
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".25*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Image Source="./Images/AOSmithLogo.png"/>
                        <TextBlock FontSize="40" Foreground="White" Text="Water Treatment Test Bench" HorizontalAlignment="Center"
                                   VerticalAlignment="Center" TextAlignment="Center" Margin="30,0,0,0"/>
                    </StackPanel>
                    <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="MODEL" Foreground="White" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="5"></Label>
                    <Label Grid.Row="0" Grid.Column="1" Content="PLAN" Foreground="White" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="5"></Label>
                    <Label Grid.Row="0" Grid.Column="2" Content="ACTUAL" Foreground="White" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Margin="5"></Label>

                        <TextBox Grid.Row="1" Grid.Column="0" Name="tbModel1" Height="Auto" MinWidth="200" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="tbPq1" Height="Auto" MinWidth="75" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>
                   <TextBox Grid.Row="1" Grid.Column="2" Name="tbAq1" Height="Auto" MinWidth="75" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>

                        <TextBox Grid.Row="2" Grid.Column="0" Name="tbModel2" Height="Auto" MinWidth="200" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>
                    <TextBox Grid.Row="2" Grid.Column="1" Name="tbPq2" Height="Auto" MinWidth="75" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>
                    <TextBox Grid.Row="2" Grid.Column="2" Name="tbAq2" Height="Auto" MinWidth="75" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>


                    <TextBox Grid.Row="3" Grid.Column="0" Name="tbModel3" Height="Auto" MinWidth="200" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>
                    <TextBox Grid.Row="3" Grid.Column="1" Name="tbPq3" Height="Auto" MinWidth="75" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>
                    <TextBox Grid.Row="3" Grid.Column="2" Name="tbAq3" Height="Auto" MinWidth="75" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>

                        <TextBox Grid.Row="4" Grid.Column="0" Name="tbModel4" Height="Auto" MinWidth="200" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>
                        <TextBox Grid.Row="4" Grid.Column="1" Name="tbPq4" Height="Auto" MinWidth="75" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>
                    <TextBox Grid.Row="4" Grid.Column="2" Name="tbAq4" Height="Auto" MinWidth="75" Margin="5,15" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" Padding="5" ></TextBox>

                </Grid>

                </Grid>


            </TabItem>
            <TabItem Header="Plan" Name="tabPlan" FontSize="15" Background="Green" Visibility="Visible" Loaded="tabPlan_Loaded">
               

                    <Grid  Background="Green">
                        <Grid.RowDefinitions>
                            <RowDefinition Height=".25*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Stretch">
                            <Image Source="./Images/AOSmithLogo.png"/>
                            <TextBlock  FontSize="40" Foreground="White" Text="Water Treatment Test Bench" 
                                       HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center" TextAlignment="Center" Margin="60,0,0,0"/>
                        </StackPanel>
                    <Grid Name="BaseGrid" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">


                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Name="tabReports" Header="Reports"  FontSize="15" Background="Green" Visibility="Visible">
                <Grid  Background="Green">
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".25*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <Image Source="./Images/AOSmithLogo.png"/>
                        <TextBlock FontSize="40" Foreground="White" Text="Water Treatment Test Bench" HorizontalAlignment="Center"
                                   VerticalAlignment="Center" TextAlignment="Center" Margin="30,0,0,0"/>
                    </StackPanel>
                    <DockPanel Grid.Row="1">
                        <GroupBox Header="Report Configuration" DockPanel.Dock="Top">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <Label Content="From:" HorizontalAlignment="Left" FontSize="12"  Width="Auto" />
                                    <dg:DatePicker Name="dpFrom" FontSize="12" Height="Auto" VerticalAlignment="Top"
                                               HorizontalAlignment="Left" Width="Auto" />
                                    <Label Content="To:" HorizontalAlignment="Left" FontSize="12" Width="Auto" />
                                    <dg:DatePicker Name="dpTo" FontSize="12" Height="Auto" VerticalAlignment="Top" HorizontalAlignment="Left"  />
                                    <Button Name="btnGenerate"  Margin="5,0,0,0" Content="Generate" Click="btnGenerate_Click"/>
                                    <Button Margin="5,0,0,0"  Name="btnExport" Content="Export" Click="btnExport_Click" 
                                    HorizontalAlignment="Right"
                                        VerticalAlignment="Top" Height="Auto" 
                                        Width="Auto"/>

                                </StackPanel>
                                <StackPanel Margin="2" Orientation="Horizontal" Visibility="Hidden">
                                    <Label Content="Data View :"/>
                                    <ComboBox Name="cmbViewTypeSelector" HorizontalAlignment="Left" SelectedIndex="0">
                                        <ComboBoxItem>Table</ComboBoxItem>
                                        <ComboBoxItem>Pie Chart</ComboBoxItem>
                                        <ComboBoxItem>Bar Graph</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>

                        </GroupBox>
                        <GroupBox Header="Report"  Height="Auto" Width="Auto" DockPanel.Dock="Bottom" >


                            <dg:DataGrid Name="dgReportGrid" AutoGenerateColumns="True" IsReadOnly="True"
                                             CanUserAddRows="False" CanUserDeleteRows="False" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                                             ItemsSource="{Binding}" HorizontalAlignment="Left" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto" Height="Auto" Width="Auto" Visibility="Collapsed"
                                 RowHeaderWidth="0" >
                            </dg:DataGrid>


                        </GroupBox>

                    </DockPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
